    // T·∫°o ho·∫∑c l·∫•y parent folder
    const destParentFolder = getOrCreateParentFolder(itemInfo.parentPath, folderCache, sourceFolder);

    // Copy file v·ªõi performance optimization
    performanceEngine.executeWithBackoff(
